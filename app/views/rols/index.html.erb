<h1>Roles</h1>
<% if @rols.count <= 0 %>
  <p class='text-danger'>No hay roles disponibles.</p><br>
<% else %>
<table class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th width='42%'>Rol</th>
      <th width='8%'></th>
      <th width='8%'></th>
    </tr>
  </thead>

  <tbody>
    <% @rols.order('name').each do |rol| %>
      <tr>
        <td><%= link_to "#{rol.name}", rol_path(rol) %></td>
        <td><%= link_to 'Editar', edit_rol_path(rol) %></td>
        <td><%= link_to 'Eliminar', rol, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<button class='btn btn-primary btn-sm' type='button' onclick="window.location.href='<%= new_rol_path %>'" > Nuevo </button>