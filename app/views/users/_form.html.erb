<%= form_for(@user) do |f| %>
  
  <%= render 'layouts/error_messages', object: @user %>

  <div class='field'>
    <%= f.label :nickname, 'Mote' %>
    <%= f.text_field :nickname, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :name, 'Nombre' %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :last_name, 'Apellido paterno' %><br>
    <%= f.text_field :last_name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :second_last_name, 'Apellido materno' %><br>
    <%= f.text_field :second_last_name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :email, 'E-mail' %><br>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :password, 'ContraseÃ±a' %><br>
    <%= f.password_field :password, class:'form-control' %>
  </div>
  <div class='field'>
