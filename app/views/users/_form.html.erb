<%= form_for(@user) do |f| %>
  
  <%= render 'layouts/error_messages', object: @user %>
<%= f.hidden_field :invitation_token %>
  <div class='field'>
    <%= f.label :nickname, 'Mote' %>
    <%= f.text_field :nickname, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :last_name, 'Apellido paterno' %>
    <%= f.text_field :last_name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :second_last_name, 'Apellido materno' %>
    <%= f.text_field :second_last_name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :email, 'E-mail' %>
    <%= f.text_field :email, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :password, 'ContraseÃ±a' %>
    <%= f.password_field :password, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :password_confirmation, 'Confirmar contraseÃ±a' %>
    <%= f.password_field :password_confirmation, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :school_id, 'Escuela' %>
    <%= f.collection_select :school_id, School.all, :id, :name, {prompt:true}, {:class => 'form-control'} %>
  </div>
  <% if current_user.nil? || current_user.admin %>
  <div class='field'>
    <%= f.label :rol_id, 'Rol' %>
    <%= f.collection_select :rol_id, Rol.all, :id, :name, {prompt:true}, {:class => 'form-control'} %>
  </div>
  <% else %>
    <%= f.hidden_field :rol_id, :value => "#{current_user.id_rol_usuario}" %>
  <% end %>
  <br>
  <button type='submit' class='btn btn-primary btn-sm'> Guardar </button>
<% end %>
