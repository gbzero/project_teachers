    <%= f.label :school_id, 'Escuela' %><br>
    <%= f.collection_select :school_id, School.all, :id, :name, {prompt:true}, {:class => 'form-control'} %>
  </div>
  <div class='field'>
    <%= f.label :rol_id, 'Rol' %><br>
    <%= f.collection_select :rol_id, Rol.all, :id, :name, {prompt:true}, {:class => 'form-control'} %>
  </div>
  <br>
  <button type='submit' class='btn btn-primary btn-sm'> Guardar </button>
