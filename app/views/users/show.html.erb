<% if flash[:notice] %>
	<div class="alert alert-dismissable alert-success">
		<%= notice %>
	</div>
<% end %>

<h1> <%= @user.nickname %> </h1>
<br>
<p>
  <strong>Nombre:</strong>
  <%= @user.full_name %>
</p>
<p>
  <strong>E-mail:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Contraseña:</strong>
  <% unless @user.password_hash.nil? %>
    * * * * * * * * 
  <% end %>
</p>
<p>
  <strong>Escuela:</strong>
  <%= @user.school.name %>
</p>
<p>
  <% if current_user.admin %>
    <strong>Rol:</strong>
    <%= @user.rol.name %>
  <% end %>
</p>
<% if @user.invitation_limit.nil? || @user.invitation_limit > 0 %>
  <ul> 
    <%=link_to 'Manda una invitación', new_invitation_path %> 
    (Te quedan <%= if @user.invitation_limit.nil? then 5 else @user.invitation_limit end %> invitaciones) 
  </ul>
<%end %>
<br>
<%= link_to 'Editar', edit_user_path(@user) %> |
<%= link_to 'Volver', users_path %>
