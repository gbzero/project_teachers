<h1>Profesores</h1> 
<% if @teachers.count <= 0 %> 
  <p class='text-danger'>No hay profesores disponibles.</p><br>
<% else %>
<table class='table table-striped table-bordered table-hover'>
<thead>
  <tr>
    <th width='74%'> Nombre </th>
    <th width='8%'></th>
    <th width='8%'></th>
  </tr>
</thead>
<tbody>
  <% current_user.profesores.each do |teacher| %>
    <tr>
      <td><%= link_to "#{teacher.full_name}", teacher_path(teacher.id) %></td>
      <td><%= link_to 'Editar', edit_teacher_path(teacher) %></td>
      <td><%= link_to 'Eliminar', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
<% end %>
