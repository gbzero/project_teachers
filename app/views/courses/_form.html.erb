<%= form_for(@course) do |f| %>
    
  <%= render 'layouts/error_messages', object: @course %>

  <div class='field'>
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :major_id, 'Carrera' %>
    <%= f.collection_select :major_id, Major.order('name').all, :id, :name , { prompt: true }, { class: 'form-control'} %>
  </div>
    <div class='field'>
    <%= f.label :semester, 'Semestre' %>
    <%= f.select :semester, ( (1..9).map { |i| [i,i] } ), { prompt: true }, { class: 'form-control' } %>
  </div>
  <br>
  <button type='submit' class='btn btn-primary btn-sm'> Guardar </button>
<% end %>