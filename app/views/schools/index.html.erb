<h1>Escuelas</h1>
<% if @schools.count <= 0 %>
  <p class='text-danger'>No hay escuelas disponibles.</p><br>
<% else %>
<table  class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th width='84%'>Nombre</th>
      <th width='8%'></th>
      <th width='8%'></th>
    </tr>
  </thead>
  <tbody>
    <% @schools.order('name').each do |school| %>
      <tr>
        <td><%= link_to "#{school.name}", school_path(school) %></td>
        <td><%= link_to 'Editar', edit_school_path(school) %></td>
        <td><%= link_to 'Eliminar', school, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<button class='btn btn-primary btn-sm' type='button' onclick="window.location.href='<%= new_school_path %>'" > Nuevo </button>
