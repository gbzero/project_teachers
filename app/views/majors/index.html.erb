<h1>Carreras</h1>
<% if @majors.count <= 0 %> 
  <p class='text-danger'>No hay carreras disponibles.</p><br>
<% else %>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
    <tr>
      <th width='84%'> Nombre </th>
      <th width='8%'></th>
      <th width='8%'></th>
    </tr>
  </thead>
  <tbody>
    <% @majors.order('name').each do |major| %>
      <tr>
        <td><%= link_to "#{major.name}", major %></td>
        <td><%= link_to 'Editar', edit_major_path(major) %></td>
        <td><%= link_to 'Eliminar', major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<button class='btn btn-primary btn-sm' type='button' onclick="window.location.href='<%= new_major_path %>'" > Nuevo </button>
