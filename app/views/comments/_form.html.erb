<%= form_for(@comment, :remote=>true) do |f| %>

  <%= render 'layouts/error_messages', object: @comment %>

  <div class='field'>
    <%= f.label :teacher_id, 'Profesor' %>
    <%= f.collection_select :teacher_id, current_user.profesores, :id, :full_name, { prompt: true }, { class: 'form-control', id: 'comment_teacher_id' } %>    
  </div>
  <div id="courses",class='field'>
       <%= f.label :course_id, 'Materia' %>
        <%= render :partial => 'courses', :locals => { :courses => current_user.materias }  %>
  </div>

<% end %>
