<%= form_for(@comment) do |f| %>
  
  <%= render 'layouts/error_messages', object: @comment %>

  <div class='field'>
    <%= f.label :teacher_id, 'Profesor' %>
    <%= f.collection_select :teacher_id, current_user.profesores, :id, :full_name, { prompt: true }, { class: 'form-control' } %>    
    <%# current_user.profesores.each do |p| %>
      <%#= p.full_name %> <br>
    <%# end %>
  </div>
  <div class='field'>
    <%= f.label :course_id, 'Materia' %>
    <%= f.collection_select :course_id, current_user.materias , :id, :name, { prompt: true }, { class: 'form-control' } 
    %>
  </div>
  <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
  <%= f.hidden_field :date_post, :value => "#{Date.today}" %>
  <div class='field'>
    <%= f.label :content, 'Comentario' %>
    <%= f.text_area :content, class:'form-control', maxlength: '254', style: 'resize:none; width:450px; height:80px;' %>
  </div>
  <br>
  <button type='submit' class='btn btn-primary btn-sm'> Guardar </button>

<% end %>
